{
  "collectionName": "components_site_components_buttons",
  "info": {
    "displayName": "button",
    "icon": "server"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true
    },
    "icon": {
      "type": "enumeration",
      "default": "chevron-right",
      "enum": [
        "chevron-left",
        "chevron-right",
        "share",
        "calendar",
        "search"
      ]
    },
    "isIconOnRightSide": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "Icon"
            },
            ""
          ]
        }
      },
      "required": true,
      "default": true
    },
    "href": {
      "type": "string",
      "required": true
    },
    "target": {
      "type": "enumeration",
      "required": true,
      "default": "_self",
      "enum": [
        "_self",
        "_blank",
        "_parent",
        "_top"
      ]
    }
  },
  "config": {}
}
